{
  "name": "@shared/core",
  "version": "1.0.0",
  "type": "commonjs",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/test-utils",
    "!dist/**/__tests__"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "import": "./dist/utils/index.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/types/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^24.1.0",
    "@vitest/coverage-v8": "^3.2.4",
    "next": "^15.4.4",
    "typescript": "^5.6.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.855.0",
    "@aws-sdk/lib-dynamodb": "^3.855.0",
    "@types/uuid": "^10.0.0",
    "jose": "^6.0.12",
    "uuid": "^11.1.0",
    "zod": "^3.22.4"
  }
}
