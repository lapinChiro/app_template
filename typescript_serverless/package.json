{
  "name": "typescript_serverless",
  "version": "1.0.0",
  "description": "**Claude Code自動化環境** for TypeScript + Next.js + AWS Lambda + CDK",
  "main": "eslint.config.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "test:watch": "pnpm -r test:watch",
    "test:coverage": "pnpm -r test -- --coverage",
    "test:docker": "jest tests/docker --config tests/docker/jest.config.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --build tsconfig.active.json --noEmit",
    "typecheck:all": "tsc --build --noEmit && pnpm --filter './apps/web-*' typecheck",
    "typecheck:packages": "pnpm -r typecheck",
    "typecheck:update": "node scripts/update-active-packages.js && npm run typecheck",
    "prepare": "husky",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:build": "docker compose build",
    "docker:ps": "docker compose ps",
    "docker:restart": "docker compose restart"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.14",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.1.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-tsdoc": "^0.4.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "js-yaml": "^4.1.0",
    "lint-staged": "^16.1.2",
    "ts-jest": "^29.2.5",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yaml,yml}": [
      "prettier --write"
    ]
  }
}
