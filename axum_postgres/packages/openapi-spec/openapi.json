{
  "openapi": "3.0.3",
  "info": {
    "title": "axum_postgres API",
    "description": "Project Management API built with Rust + Axum + PostgreSQL",
    "license": {
      "name": ""
    },
    "version": "1.0.0"
  },
  "paths": {},
  "components": {
    "schemas": {
      "CreateUserRequest": {
        "type": "object",
        "description": "User creation request model",
        "required": [
          "name",
          "email"
        ],
        "properties": {
          "email": {
            "type": "string",
            "format": "email",
            "example": "jane@example.com"
          },
          "name": {
            "type": "string",
            "example": "Jane Doe",
            "minLength": 1
          }
        },
        "example": {
          "email": "jane@example.com",
          "name": "Jane Doe"
        }
      },
      "ErrorResponse": {
        "type": "object",
        "description": "Error response model for API errors",
        "required": [
          "success",
          "message"
        ],
        "properties": {
          "error": {
            "type": "string",
            "nullable": true
          },
          "message": {
            "type": "string"
          },
          "success": {
            "type": "boolean"
          }
        },
        "example": {
          "message": "Error occurred",
          "success": false
        }
      },
      "UpdateUserRequest": {
        "type": "object",
        "description": "User update request model",
        "properties": {
          "active": {
            "type": "boolean",
            "example": false,
            "nullable": true
          },
          "email": {
            "type": "string",
            "format": "email",
            "example": "jane.smith@example.com",
            "nullable": true
          },
          "name": {
            "type": "string",
            "example": "Jane Smith",
            "nullable": true,
            "minLength": 1
          }
        },
        "example": {
          "active": false,
          "email": "jane.smith@example.com",
          "name": "Jane Smith"
        }
      },
      "UserResponse": {
        "type": "object",
        "description": "User model for API responses\nConverts database id (i32) to string for JSON compatibility",
        "required": [
          "id",
          "name",
          "email",
          "active",
          "created_at"
        ],
        "properties": {
          "active": {
            "type": "boolean"
          },
          "created_at": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          }
        },
        "example": {
          "active": true,
          "created_at": "2024-01-01T00:00:00Z",
          "email": "john@example.com",
          "id": "1",
          "name": "John Doe"
        }
      }
    }
  },
  "tags": [
    {
      "name": "users",
      "description": "User management operations"
    }
  ]
}
